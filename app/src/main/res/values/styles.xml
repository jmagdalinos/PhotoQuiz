<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/mediumGrey</item>
        <item name="android:colorControlNormal">@color/mediumGrey</item>
        <item name="android:colorControlHighlight">@color/mediumGrey</item>
        <item name="android:colorControlActivated">@color/mediumGrey</item>\

        <!-- Background. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Heading -->
    <style name="heading">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/heading</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Subheading -->
    <style name="subHeading">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/subHeading</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Divider -->
    <style name="divider">
        <item name="android:layout_marginTop">@dimen/margin_general</item>
        <item name="android:layout_marginBottom">@dimen/margin_general</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <!-- Question boxes-->
    <style name="questionBox">
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <!-- EditText -->
    <style name="editText">
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Radio buttons -->
    <style name="radioButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_text</item>
    </style>

    <!-- Radio Groups -->
    <style name="radioGroup">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
    </style>

    <!-- Check Boxes -->
    <style name="checkBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
    </style>
    
    <!-- Score TextView -->
    <style name="scoreTextView">
        <item name="android:textSize">@dimen/heading</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
