<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/mediumGrey</item>
        <item name="android:colorControlNormal">@color/mediumGrey</item>
        <item name="android:colorControlHighlight">@color/mediumGrey</item>
        <item name="android:colorControlActivated">@color/mediumGrey</item>
        <!-- Color for Background. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Style for question boxes-->
    <style name="questionBox">
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <!-- Style for EditText -->
    <style name="editText">
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Style for Radio buttons -->
    <style name="radioButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_text</item>
    </style>

    <!-- Style for Radio Groups -->
    <style name="radioGroup">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
    </style>

    <!-- Style for Check Boxes -->
    <style name="checkBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_text</item>
        <item name="android:layout_marginLeft">@dimen/margin_general</item>
        <item name="android:layout_marginRight">@dimen/margin_general</item>
        <item name="android:padding">@dimen/margin_half</item>
    </style>
</resources>
